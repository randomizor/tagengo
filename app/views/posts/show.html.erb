<div class="card mb-3 mt-3">
  <div class="card-header">
    <%= render "users/user_title", user: @post.user %>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-sm">
        <h4><%= @post.title %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <p><%= @post.entry %></p>
      </div>
    </div>
  </div>
  <div class="card-footer"><%= link_to 'Make Correction', new_post_correction_url(@post) %></div>
</div>

<ul class="nav nav-pills mb-3 bg-dark" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pills-individual-tab" data-toggle="pill" href="#pills-individual" role="tab" aria-controls="pills-individual" aria-selected="true">Individual Corrections</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-grouped-tab" data-toggle="pill" href="#pills-grouped" role="tab" aria-controls="pills-grouped" aria-selected="true">Grouped Corrections</a>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-individual" role="tabpanel" aria-labelledby="pills-individual-tab">
    <% if @post.corrections.any? %>
      <% @post.corrections.each do |correction| %>
      <div class="card mb-3 mt-3">
        <div class="card-header">
          <%= render "users/user_title", user: correction.user %>
        </div>
        <div class="card-body">
          <% correction.segment_corrections.each do |correction| %>
            <div class="row">
              <div class="col-sm">
                <div class="alert alert-secondary" role="alert">
                  <%= correction.segment.segment %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm offset-sm-1">
                <div class="alert alert-success" role="alert">
                <% sdiff = Diff::LCS.sdiff(correction.segment.segment, correction.entry) %>
                <% corrected = [] %>
                <% sdiff.each do |change, original, new_text| %>
                  <% if change == "-" %>
                    <% corrected << "<del>#{original[1]}</del>"%>
                  <% elsif change == "+"%>
                    <% corrected << "<span class='correction addition'>#{new_text[1]}</span>"%>
                  <% elsif change == "!"%>
                    <% corrected << "<span class='correction change'>#{new_text[1]}</span>"%>
                  <% else %>
                    <% corrected << new_text[1] %>
                  <% end %>
                <% end %>
                <%= corrected.join.html_safe %>
                </div>
              </div>
            </div>
            <div class="row  mb-3">
              <div class="col-sm offset-sm-2">
                <%= correction.comment %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="card-footer">Footer</div>
      </div>
      <% end %>
    <% end %>
  </div>
  <div class="tab-pane fade" id="pills-grouped" role="tabpanel" aria-labelledby="pills-grouped-tab">
    <% if @post.corrections.any? %>
      <% @post.segment_corrections.group_by(&:segment_id).each do |segment_id, corrections| %>
        <div class="card mb-3 mt-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm">
                <%= Segment.find(segment_id).segment %>
              </div>
            </div>
            <% corrections.each do |correction| %>
              <div class="row">
                <div class="col-sm offset-sm-1">
                  <% sdiff = Diff::LCS.sdiff(correction.segment.segment, correction.entry) %>
                  <% corrected = [] %>
                  <% sdiff.each do |change, original, new_text| %>
                    <% if change == "-" %>
                      <% corrected << "<del>#{original[1]}</del>"%>
                    <% elsif change == "+"%>
                      <% corrected << "<span class='correction addition'>#{new_text[1]}</span>"%>
                    <% elsif change == "!"%>
                      <% corrected << "<span class='correction change'>#{new_text[1]}</span>"%>
                    <% else %>
                      <% corrected << new_text[1] %>
                    <% end %>
                  <% end %>
                  <%= corrected.join.html_safe %>
                </div>
              </div>
              <div class="row  mb-3">
                <div class="col-sm offset-sm-2">
                  <%= correction.comment %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="card-footer">Footer</div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

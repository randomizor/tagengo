<!DOCTYPE html>
<html>
  <head>
    <title>Tagengo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'stylesheets' %>
    <link rel="stylesheet"
              href="https://fonts.googleapis.com/css?family=Noto+Sans+TC">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg sticky-top navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Tagengo</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><%= link_to 'Profile', current_user, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Posts', posts_url, class: "nav-link active" %></li>
            <li class="nav-item"><%= link_to 'New Post', new_post_url, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Prompts', prompts_url, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Resources', resources_url, class: "nav-link" %></li>
          </ul>
        </div>
      </div>
    </nav>
    <div id="content" class="container">
      <%= yield %>
    </div>
  </body>
</html>

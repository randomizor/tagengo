<h1>Prompts</h1>

<% @prompts.each do |prompt| %>
  <div class="card mb-3">
    <div class="card-header">
      <%= render "users/user_title", user: prompt.user %>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-sm">
          <p><%= prompt.prompt %></p>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <span><%= prompt.language.name %></span>
      <span><%= prompt.level.name %></span>
    </div>
  </div>
<% end %>

<%= link_to "New Prompt", new_prompt_url, class: 'button' %>
